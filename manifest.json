{
    "manifest_version": 2,
    "name": "TLU EZproxy Redirect",
    "version": "1.1",
    "description": "Automatically redirect journal links to *.ezproxy.tlu.ee",
    
    "applications": {
      "gecko": {
        "id": "tlu-redirects@example.com"
      }
    },
  
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "*://www.sciencedirect.com/*",
      "*://ieeexplore.ieee.org/*",
      "*://acm.org/*",
      "*://link.springer.com/*"
    ],
  
    "background": {
      "scripts": ["background.js"]
    }
  }
  